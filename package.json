{
	"private": true,
	"name": "sanity-nuxt-3-starter",
	"version": "1.0.0",
	"workspaces": [
		"studio",
		"web"
	],
	"config": {
		"nuxt": {
			"host": "0.0.0.0"
		}
	},
	"devDependencies": {
		"@nuxtjs/eslint-config-typescript": "^9.0.0",
		"npm-run-all": "^4.1.5"
	},
	"scripts": {
		"start": "npm-run-all -p web:dev studio:dev",
		"web:dev": "cd web && npm run dev",
		"studio:dev": "cd studio && npm run dev",
		"build": "npm run build -ws",
		"web:build": "cd web && npm run build",
		"lint": "npm run lint -ws"
	}
}
